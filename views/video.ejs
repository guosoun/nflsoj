<% this.title = video.title + ' - 视频'; %>
<% include header %>
<style>
    .video-js {
    width: 100%;
    padding-top: 56.25%; /* 9 / 16 = 0.5625 */
    position: relative;
}

.video-js .vjs-tech {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}

</style>
<body>
    <h1><%= video.title %></h1>
    <p><%= video.description %></p>
    <video id="videoPlayer" class="video-js vjs-default-skin" controls preload="auto" style="width: 100%;">
        <source src="<%= video.url %>" type="application/x-mpegURL">
    </video>
    <script>
        var player = videojs('videoPlayer');
    </script>
</body>
</html>
<% include footer %>